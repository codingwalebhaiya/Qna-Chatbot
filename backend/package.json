{
  "name": "backend",
  "version": "1.0.0",
  "description": "AI ChatBot Backend with LangChain & Gemini",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "type-check": "tsc --noEmit",
